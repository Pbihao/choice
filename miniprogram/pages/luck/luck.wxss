/* pages/luck/luck.wxss */
page {
  background-color: #fbfbfb;
  font-family: "微软雅黑light";
}
.top {
  font-size: 20px !important;
  font-family: "KaiTi";
}
.add{
  position: fixed !important;
  width: 120rpx;
  height: 120rpx !important;
  font-size: 90rpx !important;
  bottom: 70rpx;
  right: 35rpx;
  line-height: 100rpx !important;
  padding: 0rpx 0rpx !important;
}
.tip{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 450rpx;
}
.card{
  float:left;
  height: 120rpx;
  width: 70%;
  padding: 36rpx;
  color: #696969;
  background-color: #fff;
}
.title-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 40rpx;
}
.date{
  font-size: 32rpx;
  /* font-weight: bolder; */
}

.detail{
  position: absolute;
  border: 2rpx solid rgb(0, 0, 0);
  border-radius: 30rpx;
  width: 150rpx;
  height: 50rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 50rpx;
  right: 5%;
}
.delete {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 5%;
  opacity:0;
}
.progress{
  display: flex;
  flex-direction: column;
  left:50%;
  justify-content: space-between;
  font-size: 30rpx;
  text-align: left;
  color: #696969;
}
.demo_line_01{
    position: absolute;
    line-height: 1px;
    border-bottom: 1px solid #ddd;
    border-left: 400px solid #ddd;
    border-right: 400px solid #ddd;
    text-align: center;
}
.img {
  position: absolute;
  right: 6%;
  width: 60rpx;
  height: 60rpx;
}