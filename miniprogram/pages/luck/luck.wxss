/* pages/luck/luck.wxss */
page {
  background-color: #fbfbfb;
  font-family: "黑体";
}
.top {
  font-size: 24px !important;
}
.add{
  position: fixed;
  width: 120rpx;
  height: 80rpx;
  bottom: 70rpx;
  right: 35rpx;
}
.tip{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 450rpx;
}
.card{
  height: 150rpx;
  width: 94%;
  border-style: outset;
  border-bottom-color:rgba(0, 0, 0, 0.76);
  border-top-width: 0rpx;
  padding: 36rpx;
  color: #696969;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.title-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.title{
  font-size: 40rpx;
  /* font-weight: bolder; */
}
.date{
  font-size: 20rpx;
  /* font-weight: bolder; */
}

.detail{
  position: absolute;
  border: 2rpx solid rgb(0, 0, 0);
  border-radius: 30rpx;
  width: 150rpx;
  height: 50rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 50rpx;
  right: 5%;
}
.delete {
  position: fixed;
  border: 2rpx solid rgb(0, 0, 0);
  border-radius: 30rpx;
  width: 150rpx;
  height: 50rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 50rpx;
  right: 5%;
}
.progress{
  display: flex;
  flex-direction: column;
  left:50%;
  justify-content: space-between;
  font-size: 30rpx;
  text-align: left;
  color: #696969;
}