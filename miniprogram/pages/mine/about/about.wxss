.page{
  width: 100%;
  height: 100%
}
.background{
  position: absolute !important;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  filter: blur(4px);
  z-index: -1;
}
.top{
  position: absolute !important;
  width: 100%;
  height: 350rpx;
  overflow: hidden;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}

.first{
  position: absolute !important;
  width: 90%;
  left: 10%;
  height: 180rpx;
  text-align: left;
  font-size: 18px;
  top: 400rpx;
}
.self{
  position: absolute !important;
  width: 80%;
  left: 10%;
  text-align: left;
  font-size: 14px;
  top: 480rpx;
  background-color: #fff;
  opacity: 0.7;
}
