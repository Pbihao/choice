.background{
  position: absolute;
  filter: blur(15px);
  width: 100%;
  height: 100%;
  z-index: -1;
}
.card{
  position: absolute !important;
  width: 80%;
  left: 10%;
  top: 10%;
  height: 75%;
  border-radius: 10px;
  box-shadow: 10px 10px 5px #888888;
  
}
.img{
  position: absolute !important;
  width: 100%;
  height: 100%;
  z-index: 1;
  border-radius: 10px;
  box-shadow: 10px 10px 5px #888888;
  opacity: 1;
}
.con_text{
  z-index: 2;
  background-color: rgba(255,255,255,0.6);
  position: absolute !important;
  width: 100%;
  height: 220rpx;
  bottom: 0px;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
  letter-spacing: 1px;
  font-size: 17px;
  line-height: 24px;
}
