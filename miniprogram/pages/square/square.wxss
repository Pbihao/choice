.background{
  position: absolute;
  filter: blur(15px);
  width: 100%;
  height: 100%;
  z-index: -1;
}
.card{
  position: absolute !important;
  width: 80%;
  left: 10%;
  top: 10%;
  height: 75%;
  border-radius: 30px;
  box-shadow: 10px 10px 5px #888888;
  
}
.img{
  position: absolute !important;
  width: 100%;
  height: 100%;
  z-index: 1;
  border-radius: 30px;
  box-shadow: 10px 10px 5px #888888;
  opacity: 1;
}
.text{
  z-index: 2;
  background: #fff;
  position: absolute !important;
  width: 100%;
  height: 250rpx;
  bottom: 0px;
  opacity: 0.7;
  border-bottom-right-radius: 30px;
  border-bottom-left-radius: 30px;
  font-size: 17px;
  line-height: 24px;
}