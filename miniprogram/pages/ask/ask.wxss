page{
  background: whitesmoke;
}
.page{
  width: 100%;
  display: flex;
  flex-direction: column; 
  justify-content: center;
}

.top{
  width: 100%;
  height: 350rpx;
  position: relative;
}
.top-image{
  width: 100%;
  height: 350rpx;
  z-index: 0;
  opacity: 0.8;
}
.add_ask{
  position: absolute;
  z-index: 1;
  right: 20rpx;
  top: 20rpx;
}
.avatar_url{
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  z-index: 1;
  left: 60rpx;
  bottom: -60rpx;
  border-style: solid;
  border-width: 3px;
  border-color: #fff;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 100%;
  padding: 0px;
}
.card{
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  width: 690rpx;
  padding: 10px;
  box-shadow: 0px -1px black;
}
.img{
  height: 300rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  border-radius: 10px;
}
.user{
  display: flex;
  width: 100%;
 
}
.user_icon{
  margin-top: 10rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
}
.name_date{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  margin-top: 5px;
}
.content{
  font-size: 16px;
  line-height: 25px;
  margin-top: -10px;
  letter-spacing: 1px;
  min-height: 200rpx;
}
.bottom{
  display: flex;
  margin-top: 30rpx;
  height: 70rpx;
  width: 690rpx;
}
.left_button{
  width: 270rpx;
  height: 90rpx;
  font-size: 15px;
}
.vs{
  margin-right: 30rpx;
  margin-left: 30rpx;
  width: 90rpx;
  height: 90rpx;
}
.right_button{
  width: 270rpx;
  height: 90rpx;
  font-size: 15px;
}