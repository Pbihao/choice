page{
  background: whitesmoke;
}
.page{
  width: 100%;
  display: flex;
  flex-direction: column; 
}

.top{
  width: 100%;
  height: 350rpx;
  position: relative;
}
.top-image{
  width: 100%;
  height: 350rpx;
  z-index: 0;
  opacity: 0.8;
}
.add_ask{
  position: absolute;
  z-index: 1;
  right: 20rpx;
  top: 20rpx;
}
.avatar_url{
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  z-index: 1;
  left: 60rpx;
  bottom: -60rpx;
  border-style: solid;
  border-width: 3px;
  border-color: #fff;
}
.container{
  margin-top: 70rpx;
  width: 100%;
  padding: 0px;
}
/*在没有图片时候的卡牌布局*/
.card_noimg{
  display: flex;
  position: relative !important;
  width: 80%;
  left: 10%;
  margin-top: 100rpx;
  height: 500rpx;
  border: 2px solid #ffffff;
  border-radius: 5px;
  box-shadow: 4px 1px 1px #cccccc;              
  justify-content: center;
  border-bottom: 4px solid rgb(168, 164, 149);
}

.card_noimg .user_icon{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-top: -80rpx;
  border-radius:50%;
  overflow:hidden;
}
.left_button{
  width: 40%;
  position: absolute !important;
  left: 5px;
  bottom: 5px;
  height: 80rpx;
}
.right_button{
  width: 40%;
  position: absolute !important;
  right: 5px;
  bottom: 5px;
  height: 80rpx;
}
.vs{
  position: absolute !important;
  bottom: 20rpx;
  left: 45%;
  width: 70rpx;
  height: 70rpx
}
.question{
  position: absolute !important;
  width: 95%;
  height: 50%;
  border-top-style: dashed;
  border-top-color: rgb(151, 133, 133);
  border-radius: 5px;
  bottom: 20%;
}
.text{
  position: absolute !important;
  width: 95%;
  left: 2.5%;
  top: 30rpx;
  font-size:38rpx;
  line-height: 50rpx;
}
/*有图片的前面都会加上i*/
.icard{
  position: relative !important;
  width: 80%;
  left: 10%;
  margin-top: 20rpx;
  height: 800rpx;
  border-radius: 5px;                
  justify-content: center;
  box-shadow: 4px 1px 1px #cccccc;
}
.iimg{
  position: absolute !important;
  width: 100%;
  height: 40%;
  border-radius: 5px;
}
.iuser{
  position: absolute !important;
  margin-top: 55%;
  width: 100%;
  height: 10%;
}
.iuser_icon{
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
  overflow:hidden;
  margin-left: 20rpx;
}
.iuser_name{
  position: absolute !important;
  top: 20rpx;
  left: 130rpx;
  font-size: 15px;
}
.icontent{
  position: relative !important;
  width: 90%;
  top: 57%;
  border-top-style: dashed;
  border-top-color: rgb(151, 133, 133);
}
.itext{
  position: absolute !important;
  width: 95%;
  left: 2.5%;
  top: 30rpx;
  font-size:38rpx;
  line-height: 50rpx;
}